{
    "version": 1,
    "rules": {
        "cover_candidates": [
            "tag:meta:cover",
            "tag:meta:thumbnail"
        ],
        "item_roles": {
            "video": [
                "filetype:video/*"
            ],
            "attachment": [
                "filetype:application/*",
                "filetype:text/*"
            ]
        },
        "sorting": {
            "images": [
                "namespace:page:asc",
                "namespace:filename:desc"
            ],
            "videos": [
                "namespace:page:asc",
                "namespace:filename:desc"
            ],
            "others": [
                "namespace:page:asc",
                "namespace:filename:desc",
                "meta:size:desc"
            ]
        }
    }
}
